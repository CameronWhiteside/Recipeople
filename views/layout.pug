doctype html
html
  head
      block head
        title="Express Starter App"
        link(rel='stylesheet' href='/stylesheets/reset.css')
  body
    nav
    ul.navbar
      li.nav-item: a(href="/") Home
      li.nav-item: a(href="/recipes") Find Recipes
      li.nav-item
        if locals.authenticated
          a(href=`/users/${user.userId}`) Welcome #{user.userName}!
          form(action='/users/logout' method='post')
            button(type='submit') Logout
        else
          span
            a(href='/users/login') Login
            a(href='/users/signup') Register
    .container
      h2 #{title}
      block content
